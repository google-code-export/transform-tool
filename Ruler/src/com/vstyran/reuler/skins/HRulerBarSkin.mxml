<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.vstyran.reuler.view.HRulerBar")]
	</fx:Metadata>
	
	<s:Rect top="0" bottom="0" left="0" right="0">
		<s:stroke>
			<s:SolidColorStroke/>
		</s:stroke>
	</s:Rect>
	<s:DataGroup id="tickGroup" top="0" bottom="0" left="0" right="0" clipAndEnableScrolling="true">
		<s:layout>
			<s:BasicLayout/>
		</s:layout>
		<s:itemRenderer>
			<fx:Component>
				<s:ItemRenderer height="100%">
					<fx:Script>
						<![CDATA[
							override public function set data(value:Object):void
							{
								super.data = value;
								if(data)
								{
									tickLabel.text = data.value;
									width = data.distance/2;
									x = data.position;
								}
							}
						]]>
					</fx:Script>
					
					<s:Label id="tickLabel" x="5" y="4"/>
					
					<s:Line bottom="0" x="0" height="12">
						<s:stroke>
							<s:SolidColorStroke/>
						</s:stroke>
					</s:Line>
					<s:Line bottom="0" right="0" height="8">
						<s:stroke>
							<s:SolidColorStroke/>
						</s:stroke>
					</s:Line>
				</s:ItemRenderer>
			</fx:Component>
		</s:itemRenderer>
	</s:DataGroup>
</s:Skin>
