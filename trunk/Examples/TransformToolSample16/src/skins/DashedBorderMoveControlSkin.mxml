<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:graphics="graphics.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.vstyran.transform.controls.Control")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="anchorActive"/>
		<s:State name="controlActive"/>
	</s:states>
	
	<graphics:DashedRect top="0" right="0" bottom="0" left="0">
		<graphics:stroke>
			<s:SolidColorStroke/>
		</graphics:stroke>
	</graphics:DashedRect>
	
	<s:Rect top="-4" right="-4" bottom="-4" left="-4">
		<s:stroke>
			<s:SolidColorStroke weight="8" alpha="0"/>
		</s:stroke>
	</s:Rect>
</s:Skin>
