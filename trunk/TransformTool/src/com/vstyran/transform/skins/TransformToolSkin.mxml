<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		xmlns:controls="com.vstyran.transform.controls.*" 
		xmlns:operations="com.vstyran.transform.operations.*" 
		xmlns:raster="com.vstyran.transform.managers.raster.*" 
		xmlns:layouts="com.vstyran.transform.layouts.*"
		xmlns:vector="com.vstyran.transform.managers.vector.*"
		xmlns:cursors="com.vstyran.transform.managers.vector.cursors.*"
		width="200" height="180" >
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.vstyran.transform.view.TransformTool")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.vstyran.transform.managers.raster.Cursors;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!--<raster:CursorManager id="toolCursorManager">
			<raster:CursorItem control="{moveControl}" cursor="{Cursors.MoveCursor}" xOffset="-11" yOffset="-11"/>
			<raster:CursorItem control="{middleLeft}" cursor="{Cursors.HResizeCursor}" xOffset="-11" yOffset="-5"/>
			<raster:CursorItem control="{middleRight}" cursor="{Cursors.HResizeCursor}" xOffset="-11" yOffset="-5"/>
			<raster:CursorItem control="{topMiddle}" cursor="{Cursors.VResizeCursor}" xOffset="-5" yOffset="-11"/>
			<raster:CursorItem control="{bottomMiddle}" cursor="{Cursors.VResizeCursor}" xOffset="-5" yOffset="-11"/>
			<raster:CursorItem control="{topLeft}" cursor="{Cursors.TLResizeCursor}" xOffset="-8" yOffset="-8"/>
			<raster:CursorItem control="{bottomRight}" cursor="{Cursors.TLResizeCursor}" xOffset="-8" yOffset="-8"/>
			<raster:CursorItem control="{topRight}" cursor="{Cursors.TRResizeCursor}" xOffset="-8" yOffset="-8"/>
			<raster:CursorItem control="{bottomLeft}" cursor="{Cursors.TRResizeCursor}" xOffset="-8" yOffset="-8"/>
			<raster:CursorItem control="{rotateControl}" cursor="{Cursors.RotateCursor}" xOffset="-9" yOffset="-9"/>
		</raster:CursorManager>-->
		
		<cursors:ResizeCursor id="resizeCursor" rotation="45" mouseChildren="false" mouseEnabled="false"/>
		
		<vector:CursorManager id="toolCursorManager">
			<vector:CursorItem control="{moveControl}">
					<cursors:MoveCursor mouseChildren="false" mouseEnabled="false"/>
			</vector:CursorItem>
			<vector:CursorItem control="{topMiddle}" cursor="{resizeCursor}" maintainRotation="true" originalRotation="90"/>
			<vector:CursorItem control="{bottomMiddle}" cursor="{resizeCursor}" maintainRotation="true" originalRotation="90"/>
			<vector:CursorItem control="{middleLeft}" cursor="{resizeCursor}" maintainRotation="true" originalRotation="0"/>
			<vector:CursorItem control="{middleRight}" cursor="{resizeCursor}" maintainRotation="true" originalRotation="0"/>
			<vector:CursorItem control="{topLeft}" cursor="{resizeCursor}" maintainRotation="true" originalRotation="45"/>
			<vector:CursorItem control="{bottomRight}" cursor="{resizeCursor}" maintainRotation="true" originalRotation="45"/>
			<vector:CursorItem control="{topRight}" cursor="{resizeCursor}" maintainRotation="true" originalRotation="-45"/>
			<vector:CursorItem control="{bottomLeft}" cursor="{resizeCursor}" maintainRotation="true" originalRotation="-45"/>
			<vector:CursorItem control="{rotateControl}">
				<cursors:RotateCursor mouseChildren="false" mouseEnabled="false"/>
			</vector:CursorItem>
		</vector:CursorManager>
	</fx:Declarations>
	
	<controls:Control id="moveControl" top="0" left="0" right="0" bottom="0"
		skinClass="com.vstyran.transform.skins.MoveControlSkin">
		<controls:operation>
			<operations:MoveOperation/>
		</controls:operation>
	</controls:Control>
	
	<s:Line yFrom="-26" yTo="0" horizontalCenter="0">
		<s:stroke>
			<s:SolidColorStroke/>
		</s:stroke>
	</s:Line>
	<controls:Control id="rotateControl" top="-26" horizontalCenter="0"
					  anchor="{centerAnchor}">
		<controls:operation>
			<operations:RotateOperation/>
		</controls:operation>
	</controls:Control>
	
	<controls:Control id="topLeft" top="-6" left="-6" anchor="{bottomRight}">
		<controls:operation>
			<operations:ResizeOperation/>
		</controls:operation>
	</controls:Control>
	<controls:Control id="topMiddle" top="-6" horizontalCenter="0" anchor="{bottomMiddle}">
		<controls:operation>
			<operations:ResizeOperation horizontalEnabled="false"/>
		</controls:operation>
	</controls:Control>
	<controls:Control id="topRight" top="-6" right="-6" anchor="{bottomLeft}">
		<controls:operation>
			<operations:ResizeOperation/>
		</controls:operation>
	</controls:Control>
	<controls:Control id="middleRight" verticalCenter="0" right="-6" anchor="{middleLeft}" shiftAnchor="{centerAnchor}">
		<controls:operation>
			<operations:ResizeOperation verticalEnabled="false" maintainAspectRatio="true"/>
		</controls:operation>
	</controls:Control>
	<controls:Control id="bottomRight" bottom="-6" right="-6" anchor="{topLeft}">
		<controls:operation>
			<operations:ResizeOperation maintainAspectRatio="true"/>
		</controls:operation>
	</controls:Control>
	<controls:Control id="bottomMiddle" bottom="-6" horizontalCenter="0" anchor="{topMiddle}">
		<controls:operation>
			<operations:ResizeOperation horizontalEnabled="false"/>
		</controls:operation>
	</controls:Control>
	<controls:Control id="bottomLeft" bottom="-6" left="-6" anchor="{topRight}">
		<controls:operation>
			<operations:ResizeOperation/>
		</controls:operation>
	</controls:Control>
	<controls:Control id="middleLeft" verticalCenter="0" left="-6" anchor="{middleRight}">
		<controls:operation>
			<operations:ResizeOperation verticalEnabled="false"/>
		</controls:operation>
	</controls:Control>
	
	<controls:Anchor id="centerAnchor" verticalCenter="0" horizontalCenter="0"/>
</s:Skin>
